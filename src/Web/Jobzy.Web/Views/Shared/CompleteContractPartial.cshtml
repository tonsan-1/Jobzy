@model Jobzy.Web.ViewModels.Contracts.SingleContractViewModel

<div id="complete-contract" class="zoom-anim-dialog mfp-hide small-dialog-1">

    <!--Tabs -->
    <div class="sign-in-form">

        <ul class="popup-tabs-nav">
            <li><a href="#tab1">Complete Contract</a></li>
        </ul>

        <div class="popup-tabs-container">

            <!-- Tab -->
            <div class="popup-tab-content" id="tab">

                <!-- Welcome Text -->
                <div class="welcome-text">
                    <h3>Are you sure you want to complete your contract with @Model.FreelancerFirstName @Model.FreelancerLastName?</h3>
                </div>

                <form id="complete-contract-form" asp-action="ContractActions" asp-controller="Contracts">
                    <input type="text" hidden name="action" value="complete" />
                    <input type="text" hidden name="contractId" value="@Model.Id" />
                    <input type="text" hidden name="jobId" value="@Model.OfferJobId" />
                </form>

                <!-- Button -->
                <button class="margin-top-15 button w-100 button-sliding-icon ripple-effect" type="submit" form="complete-contract-form">Complete <i class="icon-material-outline-arrow-right-alt"></i></button>

            </div>
        </div>
    </div>
</div>
